<Window x:Class="GoGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoGame"
        xmlns:locall="clr-namespace:GoGame.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500*"></ColumnDefinition>
            <ColumnDefinition Width="300*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" x:Name="contentControl" Width="460" Height="460"/>
        <StackPanel Grid.Column="1">
            <Label Content="Current Move"/>
            <Ellipse x:Name="ellipseCurrentMove" Width="50" Height="50" StrokeThickness="1" Stroke="Black" HorizontalAlignment="Left">
                
            </Ellipse>
        </StackPanel>
    </Grid>
</Window>
